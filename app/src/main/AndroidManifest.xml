<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonnyspizza">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JonnysPizza">
        <activity android:name=".PlaceOrderActivity"></activity>
        <activity
            android:name=".OrderItemActivity"
            android:label="@string/title_activity_order_item"
            android:theme="@style/Theme.JonnysPizza.NoActionBar" />
        <activity android:name=".OrderSummaryActivity" />
        <activity android:name=".OrderPizza" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>